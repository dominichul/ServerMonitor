<div class="col-sm-4 col-xs-12">
  <div class="table">
    
    <div class="tablerow header green">
      <div class="cell">
        Server
      </div>
      <div class="cell">
        Address
      </div>
      <div class="cell">
        Status
      </div>
      <div class="cell">
        -
      </div>
    </div>
    <% @sites.each do |s| %>
    <div class="tablerow">
      <div class="cell">
      <%=s.name%>
      </div>
      <div class="cell">
      <a href='http://<%=s.ipaddress%>' target='_blank'><%=s.ipaddress%></a>
      </div>
      <div class="cell">
      <% if !s.status.nil? %>
      <%=s.status%>
      <% else %>
      Unknown
      <% end %>
      </div>
      <div class="cell">
      <%= link_to 'Edit', site_modal_path(id: s.id), remote: true %>
      </div>
    </div>
    <% end %>
    
  </div>
  </div>
  <%= render :partial => "users/site_modal" %>

<div class="col-sm-8 col-xs-12">
<%= render 'layouts/map'%>
<hr>
  <div class="panel panel-primary" style="padding-bottom: 0;">
      <div class="panel-heading">
        <h3 class="panel-title"> Marker Types</h3>
      </div>
      <div class="panel-body">
        <table class="table" style="margin-bottom: 0px;">
        <tbody>
          <tr>
          <td style="padding-right: 0px; margin-right: 0px;"><img src="http://maps.google.com/mapfiles/ms/icons/green-dot.png" alt="Green Marker"></td>
          <td><h4>Online</h4></td>
          <td><img src="http://maps.google.com/mapfiles/ms/icons/red-dot.png" alt="Red Marker"></td>
          <td><h4>Offline</h4></td>
          </tr>
          <tr>
          <td><img src="http://maps.google.com/mapfiles/ms/icons/yellow-dot.png" alt="Red Marker"></td>
          <td><h4>Unknown</h4></td>
          <td><img src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m1.png" alt="Site Cluster" height="32"></td>
          <td><h4>Site Cluster</h4></td>
          </tr>
        </tbody>
        </table>
        </div>
      </div>
      </div>
      </hr>
</div>
</div>
